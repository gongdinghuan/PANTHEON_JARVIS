# JARVIS 环境变量配置示例
# 复制此文件为 .env 并填入你的密钥
# 心跳配置
HEARTBEAT_ENABLED=true
HEARTBEAT_INTERVAL=1
HEARTBEAT_LOG=false
HEARTBEAK_TIMEZONE=Asia/Shanghai
HEARTBEAK_GREETING=true
# DeepSeek 配置 (推荐)
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Zhipu AI (BigModel) 配置
ZHIPU_API_KEY=
ZHIPU_BASE_URL=https://integrate.api.nvidia.com/v1
ZHIPU_MODEL=z-ai/glm4.7

# OpenAI 配置 (可选)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=dall-e-3

# Ollama 配置 (本地运行)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Home Assistant 配置 (可选)
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your_ha_long_lived_access_token


# LongPort 股票数据配置
LONGPORT_APP_KEY=
LONGPORT_APP_SECRET=
LONGPORT_ACCESS_TOKEN=

# SMTP 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SENDER_NAME=JARVIS